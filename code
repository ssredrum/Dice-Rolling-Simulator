import random # for actions with random numbers
import time # for actions with time

print("Welcome to the dice rolling simulator\nLet\'s roll the dice!") # familiarization string

print("\n") # indentation for readability
print("Your first dice!") # first dice
num1 = random.randint(1,6) # random number from 1 to 6
time.sleep(2) # 2 second delay
print(num1) # start num1
print("\n") # indentation for readability
print("Your second dice!") # second dice
num2 = random.randint(1,6) # random number from 1 to 6
time.sleep(2) # 2 second delay
print(num2) # start num2

play_again = input("Do you want to play again? yes or no\n") # set the variable 'play_again' to 'input()'


if play_again == "yes": # if person's answer is 'yes'
    print("Welcome to the dice rolling simulator\nLet\'s roll the dice!") # will be printed it if person's answer is 'yes'

    print("\n") # indentation for readability
    print("Your first dice!")  # first dice
    num1 = random.randint(1,6) # random number from 1 to 6
    time.sleep(2) # 2 second delay
    print(num1) # start num1
    print("\n")  # indentation for readability
    print("Your second dice!") # second dice
    num2 = random.randint(1,6) # random number from 1 to 6
    time.sleep(2) # 2 second delay
    print(num2)  # start num2

elif play_again == "no": # if person's answe is 'no'
    print("end") # will be printed it if person's answer is 'no'
else: #otherwise
    play_again = input("Something was wrong.") # print it in otherwise
    
